server:
  # CHANGED: Lavalink server will now listen on port 443
  port: 443 
  address: 0.0.0.0

lavalink:
  server:
    # CRITICAL FIX: This password MUST match the LAVALINK_PASSWORD environment variable exactly.
    password: "bloodyclutch123" 
    
    # CRITICAL CHANGE: Disable the broken built-in YouTube source and configure other sources
    sources:
      youtube: false 
      bandcamp: true
      soundcloud: true
      twitch: true
      vimeo: true
      http: true
      local: false
      
    bufferDurationMs: 400
    frameBufferDurationMs: 5000
    youtubePlaylistLoadLimit: 6
    playerUpdateInterval: 5
    youtubeSearchEnabled: true
    soundcloudSearchEnabled: true
    gc-warnings: true
  
  # CRITICAL CHANGE: Configuration for the external Lavalink YouTube plugin
  plugins:
    # Lavalink will try to download this dependency during startup
    - dependency: "dev.lavalink.youtube:youtube-plugin:1.15.0"  
      repository: "https://maven.lavalink.dev/releases"
