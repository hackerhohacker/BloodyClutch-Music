server:
  port: 2333
  address: 0.0.0.0

lavalink:
  server:
    password: "bloodyclutch123"
    # --- CRITICAL CHANGE 1: DISABLE THE BROKEN BUILT-IN YOUTUBE SOURCE ---
    sources:
      youtube: false
      bandcamp: true
      soundcloud: true
      twitch: true
      vimeo: true
      http: true
      local: false
    bufferDurationMs: 400
    frameBufferDurationMs: 5000
    youtubePlaylistLoadLimit: 6
    playerUpdateInterval: 5
    youtubeSearchEnabled: true
    soundcloudSearchEnabled: true
    gc-warnings: true
  
  # --- CRITICAL CHANGE 2: ADD THE YOUTUBE PLUGIN CONFIGURATION ---
  plugins:
    # IMPORTANT: You MUST replace 'VERSION' with the latest stable version number
    # of the YouTube plugin (e.g., 1.7.2, 1.8.0, etc.).
    # You must also download the corresponding .jar file.
    - dependency: "dev.lavalink.youtube:youtube-plugin:1.15.0" 
      repository: "https://maven.lavalink.dev/releases"
